[DllImport ("clutter")]
private static extern void clutter_rectangle_get_color (IntPtr stage, ref Clutter.Color color);

[DllImport ("clutter")]
private static extern void clutter_rectangle_set_color (IntPtr stage, ref Clutter.Color color);

public Color Color {
    get {
        Clutter.Color color = new Clutter.Color ();
        clutter_rectangle_get_color (Handle, ref color);
        return color;
    }

    set { clutter_rectangle_set_color (Handle, ref value); }
}

